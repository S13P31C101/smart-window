pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build FastAPI Docker Image') {
            steps {
                dir('ai-test') {
                    sh 'docker build -t fastapi-reborn .'
                }
            }
        }

        stage('Run Docker Compose') {
            steps {
                dir('ai-test/infra') {
                    sh 'docker compose down'
                    // .env는 ai-test/infra/.env에 서버에서 미리 넣어두도록 가정
                    sh 'docker compose up -d --build'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
